{
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5432;Database=RateLimiter_DB;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "RateLimitSettings": {
    "FixedWindow": {
      "PermitLimit": 5,
      "WindowInSeconds": 60
    },
    "SlidingWindow": {
      "PermitLimit": 100,
      "WindowInSeconds": 60,
      "SegmentsPerWindow": 6
    },
    "TokenBucket": {
      "TokenLimit": 100,
      "TokensPerPeriod": 10,
      "ReplenishmentPeriodInSeconds": 10
    },
    "Concurrency": {
      "PermitLimit": 10
    },
    "Global": {
      "PenaltyDurationInSeconds": 60,
      "MaxPenaltyDurationInSeconds": 300,
      "BanThreshold": 5,
      "BanDurationInSeconds": 3600
    }
  },
  "NSwag": {
    "DocumentName": "v1",
    "Title": "API Rate Limiter",
    "Version": "v1",
    "Description": "API Rate Limiter Service",
    "Enabled": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "your-issuer",
    "Audience": "your-audience",
    "SecretKey": "rVVd@tDgCmk}*g|&[n0|XvmQahP(MOG0gR/[{o5RG?jLvOAs(T50kjGMh|sQM:z"
  }
}